<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rndborder"
    android:layout_marginTop="5px"
    android:padding="6dip">
    
    	
        <TextView
        	android:id="@+id/reviewText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:typeface="serif"
            android:textSize="10px"
            android:layout_marginTop="2px"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:text="Sample Review Text"
			 />
			 
			  <View
			 android:id="@+id/line"
         android:layout_width="fill_parent"
         android:layout_height="2dip"
         android:background="#55000000"
          android:layout_alignParentLeft="true"
          android:layout_below="@id/reviewText" />
			
         
		<TextView
    android:id="@+id/readreviewtext"
    android:background="@drawable/reviewbtn_background"
    android:clickable="true"
    android:focusable="true"
    android:textColor="#000000"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentBottom="true"
    android:layout_below="@id/line"
    android:textSize="12px"
    android:textStyle="bold"
    android:text="Read All Reviews..."
    android:drawableRight="@drawable/glass" />	
    
    

        
</RelativeLayout>