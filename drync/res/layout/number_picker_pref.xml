<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dip"
    >
    
    <com.drync.android.widget.NumberPicker
        android:id="@+id/pref_num_picker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
        
    <LinearLayout android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"
    >
    
    	<Button android:id="@+id/okBtn" android:textColor="#FFFFFF"
					android:layout_width="80dip" android:layout_height="40dip"
					android:textSize="12px" 
					android:layout_gravity="left" android:typeface="normal"
					android:textStyle="normal" 
					android:text="OK" />
    	<Button android:id="@+id/cancelBtn" android:textColor="#FFFFFF"
					android:layout_width="80dip" android:layout_height="40dip"
					android:textSize="12px" 
					android:layout_gravity="right" android:typeface="normal"
					android:textStyle="normal"
					android:text="Cancel" />
    </LinearLayout>
    
</LinearLayout>
